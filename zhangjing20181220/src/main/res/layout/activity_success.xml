<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SuccessActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/image_success_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tp_back"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/image_success_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
           android:background="@drawable/search"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        <EditText
            android:id="@+id/edit_success_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ems="17"
            android:background="@drawable/shape_search"
            android:hint="    搜索"
            />
        <ImageView
            android:id="@+id/image_change"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/qh"
            android:layout_marginLeft="15dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        >
        <TextView
            android:id="@+id/text_zh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="综合"
            android:textSize="25sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_xl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="销量"
            android:textSize="25sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="价格"
            android:textSize="25sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="排序"
            android:textSize="25sp"
            android:gravity="center"
            />
    </LinearLayout>
        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/x_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            ></com.jcodecraeer.xrecyclerview.XRecyclerView>
</RelativeLayout>